
wave_length = int(input('Please input wave length:\n'))

if wave_length > 750:
    print('The range is too high')
elif wave_length >= 620:
    print('The color is Red')
elif wave_length >= 590:
    print('The color is Orange')
elif wave_length >= 570:
    print('The color is Yellow')
elif wave_length >= 495:
    print('The color is Green')
elif wave_length >= 450 :
    print('The color is Blue')
elif wave_length >= 380:
    print('The color is Violet')

else:
    print('Error: Please enter valid wave length')
